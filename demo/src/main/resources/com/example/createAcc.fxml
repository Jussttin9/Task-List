<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.create">
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Label text="New Username"/>
            <TextField fx:id="newUsername"/>
        </children>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Label text="New Password"/>
            <TextField fx:id="newPassword"/>
        </children>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Button fx:id="submitButton" text="Create Account" onAction="#backToLogin"/>
        </children>
    </HBox>
</VBox>